alias gld='git-log-date 10'
alias glt='git-log-tree'
alias gp='git-push'
alias gr='git-rebase'
alias gch='git-checkout'
alias gchm='git-checkout master'

alias gh='ag-here'

# ls
alias ll='ls-long'
alias l='ls-simple'
alias lls='ls-long-size'
