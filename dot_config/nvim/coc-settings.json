{
  // coc-yank
  // https://github.com/neoclide/coc-yank
  "yank.highlight.enable": false,
  //"yank.highlight.duration": 1000,
  "suggest.autoTrigger": "none",
  // coc-snippets
  // https://github.com/neoclide/coc-snippets
  "snippets.userSnippetsDirectory": "$HOME/.config/nvim/ultisnips",
  "snippets.extends": {
    "typescript": ["javascript"]
  },
  // disable Python so error no occur
  // see: https://stackoverflow.com/questions/63969277/does-coc-nvim-require-python
  // "snippets.ultisnips.usePythonx": false,
  // coc-prettier
  // https://github.com/neoclide/coc-prettier
  "coc.preferences.formatOnSaveFiletypes": ["markdown", "javascript"],
  // coc-tsserver
  // https://github.com/neoclide/coc-tsserver
  // "tsserver.trace.server": "verbose",
  // "tsserver.log": "verbose",
  // open tsserver log file by command :CocCommand tsserver.openTsServerLog
  // open tsserver output channel by command :CocCommand workspace.showOutput tsserver
  // CommonJS module msg turn off:
  "javascript.suggestionActions.enabled": false,
  // coc
  "diagnostic.errorSign": "X",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "i",
  "diagnostic.hintSign": "i"
}
